# Application Settings
APP_NAME="Vera API"
DEBUG=false
ENVIRONMENT=production

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Qdrant Configuration
# For cloud deployment, use:
QDRANT_MODE=cloud
QDRANT_URL=https://your-cluster.us-east.aws.cloud.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here

# For local development, use:
# QDRANT_MODE=local
# QDRANT_PATH=./qdrant_storage

# Optional: LangSmith Tracing
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=Vera
LANGSMITH_API_KEY=your_langsmith_api_key_here

# Cloudflare R2 Storage (for PDF storage)
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=510k-pdfs
# Optional: Custom domain for R2 bucket (e.g., https://pdfs.yourdomain.com)
# R2_PUBLIC_URL_BASE=https://pdfs.yourdomain.com